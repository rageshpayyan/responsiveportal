@model ResponsivePortal.Models.FavoritesViewModel
@using ResponsivePortal.Resources
@{
    ViewBag.Title = Utilities.GetResourceText(Model.Resources, "MANAGEMYFAVORITES");
    Layout = "~/Views/shared/_Layout.cshtml";
}

@Html.HiddenFor(x => x.clientId)
@Html.HiddenFor(x => x.portalId)

@Html.HiddenFor(x => x.Resources["FAVORITEVIEWTITLE"], new { id = "title" })
@Html.HiddenFor(x => x.Resources["FAVORITEVIEWLASTVIEWED"], new { id = "lastviewed" })
@Html.HiddenFor(x => x.Resources["FAVORITEVIEWTOTALVIEWS"], new { id = "totalviews" })
@Html.HiddenFor(x => x.Resources["FAVORITEVIEWACTION"], new { id = "action" })
@Html.HiddenFor(x => x.Resources["DELETEFAVTITLE"], new { id = "deltitle" })
@Html.HiddenFor(x => x.Resources["DELETEFAVMSG"], new { id = "delmsg" })
@Html.HiddenFor(x => x.Resources["DELFAVBTNTXT"], new { id = "delbtn" })
@Html.HiddenFor(x => x.Resources["CANCELFAVBTNTXT"], new { id = "cancelbtn" })

<link href="@Url.Content("~/Content/themes/JqGrid/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/JqGrid/jquery-ui-1.8.custom.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/themes/JqGrid/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/themes/JqGrid/jquery-ui-1.10.3.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/themes/JqGrid/grid.locale-en.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/themes/JqGrid/jquery.jqGrid.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/themes/JqGrid/jquery.qtip-1.0.0-rc3.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/themes/JqGrid/Helper.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/JS/ManageFavs.js")" type="text/javascript"></script>

@if (Model.showBreadcrumb)
{
    <div class="row" >  
        <div class="large-12 medium-12 small-12 columns"  style="padding:0px; margin-top:20px;">
            @foreach (var item in Model.BreadcrumbViewModel.NavigationList)
            {
                if (item.Selected)
                {
                    <div class="inline breadcrumb">@Html.Raw(HttpUtility.HtmlDecode(item.Text))</div>
                }
                else
                {
                    if (!string.IsNullOrEmpty(item.Text))
                    {
                        <a href="/@item.Value/Index/@Model.clientId/@Model.portalId?title=@item.Text" class="inline breadcrumb">@Html.Raw(HttpUtility.HtmlDecode(item.Text)) > </a>
                    }
                }
            }
        </div>    
    </div>
}
<div class="row" >        
     <div class="large-12 columns" style="float: left;">      
	 <div style="background-color:#CCCCCC; padding:0px; margin-top:10px; margin-bottom:20px; height:1px;"></div>
        <table id="grid" cellpadding="0" cellspacing="0"></table>
    </div>
</div>













