@model ResponsivePortal.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/shared/_AdminLayout.cshtml";
}
<style>
    .editerror {
        color: red;
        font-size: medium;
        text-align: match-parent;        
    }
    button, .button {
        border-style: solid;
        border-width: 0px;
        cursor: pointer;
        font-family: "Helvetica Neue", "Helvetica", Helvetica, Arial, sans-serif;
        font-weight: normal;
        line-height: normal;
        margin: 0 0 1.25rem;
        position: relative;
        text-decoration: none;
        text-align: center;
        display:inline;
        padding-top: 1rem;
        padding-right: 2rem;
        padding-bottom: 1.0625rem;
        padding-left: 2rem;
        font-size: 1rem;
        background-color: #9ACD32;
        border-color: #007095;
        color: white;
        -webkit-transition: background-color 300ms ease-out;
        -moz-transition: background-color 300ms ease-out;
        transition: background-color 300ms ease-out;
        padding-top: 1.0625rem;
        padding-bottom: 1rem;
        -webkit-appearance: none;
        border: none;
        font-weight: bold !important;
</style>
<div class="row">
    <div class="large-12 columns push-1">
        <h2>@Model.Resources["TITLE"]  </h2>
    </div>
</div>

<div class="row">
    <div class="large-5 columns small-4 push-1">
        <section id="ChangePasswordForm">
            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h6>@Model.Resources["INSTRUCTIONS"]  </h6>
                <hr />
                <div class="editerror">
                    @if (ViewBag.Message == "1")
                    {
                        <div class="editerror">
                            @Model.Resources["INVALIDDETAILS"]
                        </div>
                    }
                    @if (ViewBag.Message == "2")
                    {
                        <div class="editerror">
                            @Model.Resources["MINLENGTH"]
                        </div>
                    }
                    @if (ViewBag.Message == "3")
                    {
                        <div class="editerror">
                            @Model.Resources["FIELDSREQUIRED"]
                        </div>
                    }
                    @if (ViewBag.Message == "4")
                    {
                        <div class="editerror">
                            @Model.Resources["FAILED"]
                        </div>
                    }                   
                </div>
                <div class="large-2">&nbsp;</div>
                <div class="row">
                    <div class="form-group">
                        <div class="large-4 small-4 columns">
                            <label class="text-left" for="UserName">@Model.Resources["NEWLABEL"]</label>
                            </div>
                        <div class="row large-8 columns pull-1" >
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        </div>
                        </div>
                    </div>
                  <div class="row">
                    <div class="form-group">
                        <div class="large-5 small-5 columns">
                            <label class="text-left" for="UserName">@Model.Resources["CONFIRMLABEL"]</label>
                            </div>
                        <div class="row large-8 columns pull-1" >
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
              </div>
                    </div>
                    <div class="row">          
                   <div class="row large-8 small-8 columns push-6">
                    <div class="form-group">
                        <div class="row large-8 columns" >
                            <input class="button" type="submit" value="@Model.Resources["SUBMITLABEL"]" class=" btn btn-default" />
                        </div>
                    </div>
                  </div>
                </div>
                 @Html.HiddenFor(m => m.clientId)
                 @Html.HiddenFor(m => m.portalId)
                 @Html.HiddenFor(m => m.TokenString)
            }
        </section>
    </div>
</div>
