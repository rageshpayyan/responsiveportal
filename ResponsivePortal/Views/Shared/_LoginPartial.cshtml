@using Microsoft.AspNet.Identity
@model ResponsivePortal.Models.HeaderViewModel

@if (Request.IsAuthenticated && Model.portalType != PortalAPI.Models.PortalType.Open)
{
        <ul class="nav navbar-nav navbar-right" style="color:aliceblue">
            Hello @User.Identity.GetUserName()!
            @if (!Model.isActiveDiretoryUser)
            {
                <a href="/Account/LogOff/@Model.clientId/@Model.portalId?clientId=@Model.clientId&portalId=@Model.portalId">Log off</a>
            }
        </ul>
}
else if (Model.portalType != PortalAPI.Models.PortalType.Open)
{
    <ul class="nav navbar-nav navbar-right" style="background-color:transparent">
        @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "regularMenuItem" })
    </ul>
}
